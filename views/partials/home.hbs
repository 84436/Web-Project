<!-- Featured This Week (3) (Carousel) -->
<div class="home1-mainslider">
    <div class="container-fluid p0">
        <div class="row">
            <div class="col-lg-12">
                <div class="main-banner-wrapper">
                    <div class="banner-style-one owl-theme owl-carousel">
                        <!-- TEMPLATEME! -->
                        {{#each hotCourses}}
                            <div class="slide slide-one"
                                style="background-image: url(images/banner/{{this._id}}.jpg); height: 75vh;">
                                <div class="container">
                                    <div class="row home-content">
                                        <div class="col-lg-12 text-center p0">
                                            <h4 style="font-style: italic; color: white">FEATURED THIS WEEK</h4>
                                            <h3 class="banner-title">{{this.name}}</h3>
                                            <p>{{this.desc.short}}</p>
                                            <div class="btn-block"><a href="/courses/{{this._id}}" class="banner-btn">
                                                    Take A Look
                                                    <i class="fa fa-arrow-circle-right"></i>
                                                </a></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                    <div class="carousel-btn-block banner-carousel-btn">
                        <span class="carousel-btn left-btn"><i class="flaticon-left-arrow left"></i> <span
                                class="left">PR <br> EV</span></span>
                        <span class="carousel-btn right-btn"><span class="right">NE <br> XT</span> <i
                                class="flaticon-right-arrow-1 right"></i></span>
                    </div><!-- /.carousel-btn-block banner-carousel-btn -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Most Viewed Courses (10)-->
<section id="courses-most-viewed" class="top-courses pb30">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="main-title text-center">
                    <h3 class="mt0">Most Viewed Courses</h3>
                    <p>Top 10 courses with the highest view count across categories</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="emply-text-sec">
                    <!-- TEMPLATEME! -->
                    <div class="row row-cols-5" id="masonry_abc">
                        {{#each mostViewCourses}}
                            <a href="/courses/{{this._id}}">
                                <div class="col">
                                    <div class="top_courses">
                                        <div class="thumb">
                                            <img class="img-whp" src="images/banner/{{this._id}}.jpg">
                                            {{#unless (eq this.badgeName '')}}
                                                <div class="overlay">
                                                    <div class="tag">{{this.badgeName}}</div>
                                                </div>
                                            {{/unless}}
                                        </div>
                                        <div class="details">
                                            <div class="tc_content">
                                                <p>{{this.instructorID.name}}</p>
                                                <h5 style="height: 100px">{{this.name}}</h5>
                                                <ul class="tc_review">
                                                    <span><i class="fa fa-star"></i> {{this.averageRate}}
                                                        ({{this.feedbackCount}})</span>
                                                </ul>
                                            </div>
                                            <div class="tc_footer">
                                                <div class="tc_price float-right">
                                                    ${{calSaleOff this.price this.discount}}
                                                    <small
                                                        style="text-decoration: line-through;">${{this.price}}</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
